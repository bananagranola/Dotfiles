%action Message Notifier
event msg
proto all
status all
options stdin
%exec
msg=$(cat)
nick=$(head -n 1 $CONTACT_INFODIR/info)
act_id=$(xprop -root | grep "_NET_ACTIVE_WINDOW(WINDOW)"| cut -d ' ' -f 5)
xprop -id $act_id | grep centerim &>/dev/null
if [[ $? > 0 ]]; then
	notify-send "$nick: $msg"
fi
