# Maintainer: foalsrock <foalsrock at gmail dot com>

pkgname=blackwhite-gtk-theme
pkgver=1
pkgrel=1
pkgdesc="BlackWhite GTK2 and GTK3 theme by lyrae"
url="http://gnome-look.org/content/show.php/?content=153054"
license=('GPL3')
arch=('any')
noextract=('blackwhite_gtk3_by_thrynk-d59dyyh.zip')
makedepends=('unzip')
source=("http://www.deviantart.com/download/318099257/blackwhite_gtk3_by_thrynk-d59dyyh.zip")
md5sums=('583da41af7f316e15c97fe724c720d3d')

package() {
	unzip "$srcdir/blackwhite_gtk3_by_thrynk-d59dyyh.zip"
	mkdir -p "$pkgdir/usr/share/themes"
	cp -r "$srcdir/BlackWhite/BlackWhite/" "$pkgdir/usr/share/themes/"

	find "$pkgdir" -type d -exec chmod 755 "{}" \;
	find "$pkgdir" -type f -exec chmod 644 "{}" \;
}
