set beep		= no
set delete		= yes
set editor		= "vim"
set fast_reply	= yes
set folder      = "imaps://imap.gmail.com:993"
set header_cache = "/home/amytcheng/.mutt/cache/"
set imap_user   = amezster@gmail.com
set imap_pass   = `cat /home/amytcheng/.scripts/googlepass.txt`
set imap_keepalive	= 300
set include		= no
set mail_check	= 120
set markers		= no
set move		= no
set pager_index_lines	= 5
set postponed	= "+[Gmail]/Drafts"
set record		= "~/.mutt/sent"
set smtp_url    = "smtp://amezster@smtp.gmail.com:587/"
set smtp_pass   = `cat /home/amytcheng/.scripts/googlepass.txt`
set sort		= 'threads'
set sort_aux	= 'last-date-received'
set spoolfile	= "+INBOX"
mailboxes       = "+INBOX"
unset imap_passive

bind editor <space> noop
macro index gi "<change-folder>=INBOX<enter>" "Go to Inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to All Mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gr "<change-folder>=[Gmail]/Starred<enter>" "Go to Starred"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to Drafts"
macro index gg "<change-folder>=Games<enter>" "Go to Games"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to Trash"

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
ignore *
unignore from: date subject to cc
unignore x-mailing-list: posted-to:
unignore x-mailer:

